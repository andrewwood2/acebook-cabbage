<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to @post.user.email, @post.user %></h5>
    <p class="card-text"><%=@post.content%></p>
    <%= link_to 'Edit', edit_post_path(@post), class: 'card-link' %>
    <%= link_to 'Delete', post_path(@post), method: :delete, class: 'card-link' %>
  </div>
</div>
